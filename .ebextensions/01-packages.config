# Install FFmpeg and SSL dependencies
packages:
  yum:
    git: []
    wget: []
    
commands:
  01_install_ffmpeg:
    command: |
      # Install FFmpeg from RPM Fusion
      amazon-linux-extras install epel -y
      yum install -y https://download1.rpmfusion.org/free/el/rpmfusion-free-release-7.noarch.rpm
      yum install -y ffmpeg ffmpeg-devel
    ignoreErrors: true
    
  02_verify_ffmpeg:
    command: |
      # Verify FFmpeg installation
      ffmpeg -version || echo "FFmpeg installation failed"
    ignoreErrors: true
    
  03_install_openssl:
    command: |
      # Install OpenSSL tools
      yum install -y openssl openssl-devel
    ignoreErrors: true
