# Monitoring and Logging Configuration
files:
  # Custom CloudWatch agent config
  /opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json:
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/eb-engine.log",
                  "log_group_name": "/aws/elasticbeanstalk/savemedia/eb-engine",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/access.log",
                  "log_group_name": "/aws/elasticbeanstalk/savemedia/nginx-access",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/error.log",
                  "log_group_name": "/aws/elasticbeanstalk/savemedia/nginx-error",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        },
        "metrics": {
          "namespace": "SaveMedia/Application",
          "metrics_collected": {
            "cpu": {
              "measurement": ["cpu_usage_idle", "cpu_usage_iowait"],
              "metrics_collection_interval": 60
            },
            "disk": {
              "measurement": ["used_percent"],
              "metrics_collection_interval": 60,
              "resources": ["*"]
            },
            "mem": {
              "measurement": ["mem_used_percent"],
              "metrics_collection_interval": 60
            }
          }
        }
      }

commands:
  01_setup_monitoring:
    command: |
      # Install CloudWatch agent
      yum install -y amazon-cloudwatch-agent
      
      # Start CloudWatch agent
      /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl \
        -a fetch-config -m ec2 -c file:/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json -s
    ignoreErrors: true
